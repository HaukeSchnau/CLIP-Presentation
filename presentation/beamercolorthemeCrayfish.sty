%%%%%% user can pick color by doing \usecolortheme[color=<color>]{Crayfish}
\definecolor{c_color}{named}{red}       % red default
\DeclareOptionBeamer{color}{\definecolor{c_color}{named}{#1}}

\DeclareOptionBeamer{high-contrast}{
\definecolor{c_title}{HTML}{141414}
\definecolor{c_text}{HTML}{292929}
\definecolor{c_comment}{HTML}{666666}
}

\DeclareOptionBeamer{dark-mode}{
\definecolor{c_title}{HTML}{ffffff}
\definecolor{c_text}{HTML}{adadad}
\definecolor{c_comment}{HTML}{666666}
\definecolor{c_background}{HTML}{292929}
\definecolor{c_codebg}{HTML}{141414}
}

