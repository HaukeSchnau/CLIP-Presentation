\definecolor{c_comment}{HTML}{adadad}
\definecolor{c_background}{HTML}{ffffff}
\definecolor{c_codebg}{HTML}{f0f0f0}

%%%%%% ACCENT COLOR (crab theme) %%%%%%
\definecolor{black}{HTML}{2b2728}       % black
%\definecolor{white}{HTML}{dee2ca}       % white
\definecolor{red}{HTML}{e33054}         % red
\definecolor{orange}{HTML}{e5703a}      % orange
